@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}
<a asp-action="Create" class="btn btn-success"> Add New User </a>
<br />
@if (Model.Count() > 0)
{
    <br />
    <h1> All Users </h1>
    <br />
    <div class="m-2">
        <form class="row offset-2 " asp-action="Index">
            <div class="col-8">
                <input class="form-control" type="search" name="SearchValue" placeholder="User's" />
            </div>
            <div class="col-4">
                <input type="submit" class="btn btn-dark" value="Search" />

            </div>

        </form>
    </div>
    <table class="table table-light table-hover">
        <thead class="table-dark">
            <tr>
                <td>@Html.DisplayNameFor(E => E.Id)</td>
                <td>@Html.DisplayNameFor(E => E.FName)</td>
                <td>@Html.DisplayNameFor(E => E.LName)</td>
                <td>@Html.DisplayNameFor(E => E.Email)</td>
                <td>@Html.DisplayNameFor(E => E.phoneNumber)</td>
                <td>@Html.DisplayNameFor(E => E.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var U in Model)
            {
                <tr>

                    <td>@Html.DisplayFor(UU => U.Id)</td>
                    <td>@Html.DisplayFor(UU => U.FName)</td>
                    <td>@Html.DisplayFor(UU => U.LName)</td>
                    <td>@Html.DisplayFor(UU => U.Email)</td>
                    <td>@Html.DisplayFor(UU => U.phoneNumber)</td>
                    <td>@string.Join(",",U.Roles)</td>
                    <partial name="_ButtonsPV" model="@U.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h1>There Is No Employees </h1>
    </div>
}


