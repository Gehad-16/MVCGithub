@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-success"> Add New Role </a>
<br />
@if (Model.Count() > 0)
{
    <br />
    <h1> All Roles </h1>
    <br />
    <div class="m-2">
        <form class="row offset-2 " asp-action="Index">
            <div class="col-8">
                <input class="form-control" type="search" name="SearchValue" placeholder="Role's" />
            </div>
            <div class="col-4">
                <input type="submit" class="btn btn-dark" value="Search" />

            </div>

        </form>
    </div>
    <table class="table table-light table-hover">
        <thead class="table-dark">
            <tr>
                <td>@Html.DisplayNameFor(E => E.Id)</td>
                <td>@Html.DisplayNameFor(E => E.RoleName)</td>    
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var R in Model)
            {
                <tr>

                    <td>@Html.DisplayFor(RR => R.Id)</td>
                    <td>@Html.DisplayFor(RR => R.RoleName)</td>
                   
                    <partial name="_ButtonsPV" model="@R.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h1>There Is No Employees </h1>
    </div>
}




