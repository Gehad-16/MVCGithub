
@model IEnumerable<Department>
@{
    ViewData["Title"] = "AllDepartments";
}
<a asp-action="Create" class="btn btn-success"> Create New Department </a>
<br/>
@if(Model.Count()>0)
{
    <h1 class="mt-3"> All Departments</h1>
    <br/>
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D=>D.Code)</td>
                <td>@Html.DisplayNameFor(D=>D.Name)</td>
                <td>@Html.DisplayNameFor(D=>D.DateOfCreation)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            
                @foreach(var D in Model)
                {
                <tr>
                    <td>@D.Code</td>
                    <td>@D.Name</td>
                    <td>@D.DateOfCreation</td>
                    <partial name="_ButtonsPV" model="@D.ID.ToString()" />
                </tr>
                }
            
        </tbody>
    </table>
    
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3> Not Found Any Department</h3>
    </div>
   
}
